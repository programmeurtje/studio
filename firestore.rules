rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to open house dates
    match /open_house_dates/{dateId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null; // Simplistic rule, refine for admin roles
    }

    // Allow authenticated users to write page views, but only admins to read
    match /page_views/{viewId} {
      allow create: if request.auth != null;
      allow read, list, update, delete: if request.auth != null && request.auth.token.admin == true;
    }
  }
}